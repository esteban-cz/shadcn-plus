{
  "version": "1.0.5",
  "name": "shadcn-plus",
  "displayName": "shadcn/plus",
  "description": "VS Code extension for shadcn/ui. Init and add one or multiple components directly from VS Code.",
  "publisher": "esty",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "https://github.com/esteban-cz/shadcn-plus"
  },
  "bugs": {
    "url": "https://github.com/esteban-cz/shadcn-plus/issues",
    "email": "tomecka.stepan@gmail.com"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "shadcn-plus.showMenu",
        "title": "shadcn/plus: Open Menu"
      },
      {
        "command": "shadcn-plus.initCli",
        "title": "shadcn/plus: Install CLI"
      },
      {
        "command": "shadcn-plus.addNewComponent",
        "title": "shadcn/plus: Add New Component"
      },
      {
        "command": "shadcn-plus.addMultipleComponents",
        "title": "shadcn/plus: Add Multiple Components"
      },
      {
        "command": "shadcn-plus.gotoComponentDoc",
        "title": "shadcn/plus: Open Component Documentation"
      },
      {
        "command": "shadcn-plus.reloadComponentList",
        "title": "shadcn/plus: Reload Component List"
      },
      {
        "command": "shadcn-plus.gotoDoc",
        "title": "shadcn/plus: Open Documentation"
      }
    ],
    "configuration": {
      "title": "shadcn/plus",
      "properties": {
        "shadcn-plus.commandWorkingDirectory": {
          "type": "string",
          "default": "",
          "description": "Optional working directory for shadcn/ui commands. Relative paths resolve from the first workspace folder; absolute paths are supported."
        },
        "shadcn-plus.baseColor": {
          "type": "string",
          "enum": [
            "neutral",
            "gray",
            "zinc",
            "stone",
            "slate"
          ],
          "default": "zinc",
          "description": "Default base color passed to the shadcn/ui init command."
        },
        "shadcn-plus.askBaseColor": {
          "type": "boolean",
          "default": false,
          "description": "Ask for the base color each time before running the shadcn/ui init command."
        },
        "shadcn-plus.autoCloseTerminal": {
          "type": "boolean",
          "default": true,
          "description": "Automatically close extension-created terminals after command completion. If disabled, terminals remain open."
        }
      }
    },
    "languageModelTools": [
      {
        "name": "get_shadcnComponentList",
        "displayName": "shadcn/plus: Get Component List",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "get_shadcnComponentList",
        "userDescription": "Get the list of components from shadcn/ui",
        "modelDescription": "Gets a list of re-usable react (tsx) components from shadcn/ui."
      },
      {
        "name": "install_shadcnComponent",
        "displayName": "shadcn/plus: Download Component",
        "canBeReferencedInPrompt": true,
        "toolReferenceName": "install_shadcnComponent",
        "userDescription": "Download a component from shadcn/ui",
        "modelDescription": "Downloads a component from shadcn/ui and adds it to the project automatically, usually under the (root)/components/ directory.",
        "inputSchema": {
          "type": "object",
          "properties": {
            "id": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Name(s) of the component to be downloaded. The name should be exactly as it appears in the shadcn/ui documentation."
            }
          },
          "required": [
            "id"
          ]
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "update": "ncu -u && npm install",
    "update:check": "ncu",
    "deploy": "vsce publish",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^9.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "25.3.0",
    "@types/vscode": "^1.109.0",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^10.0.0",
    "glob": "^13.0.6",
    "mocha": "^11.7.5",
    "npm-check-updates": "^19.4.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.105.2",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {}
}
